{
  "name": "jungleoats",
  "version": "1.0.0",
  "description": "A platform game I made way back in 2005 with Freehand MX and Flash MX.",
  "private": "true",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "pug": "pug src/templates/views --out build --obj data/index.json",
    "cssnano": "cssnano build/styles/app.css build/styles/app.css",
    "styles": "postcss src/styles/app.css -d build/styles --no-map true",
    "build": "NODE_ENV=production && npm run pug && npm run styles && npm run cssnano",
    "deploy": "npm run build && surge -p build -d jungleoats.surge.sh"
  },
  "author": "Lance Guyatt <lance@lanceguyatt.com>",
  "license": "ISC",
  "dependencies": {
    "serve": "^5.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.10.0",
    "cssnano-cli": "^1.0.5",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "postcss-custom-properties": "^5.0.2",
    "postcss-import": "^9.1.0",
    "pug": "^2.0.0-beta11"
  }
}
